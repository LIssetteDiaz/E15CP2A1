<%= form_with(model: history, local: true, multipart: true, class: "form-horizontal col-md-6") do |form| %>
  <% if history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:</h2>

      <ul>
      <% history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="form-group form-group-custom">
      <%= form.label :title, "Título", class: "col-lg-4 " %>
      <div class="col-lg-12">
        <%= form.text_field :title, id: :history_title, class: "form-custom" %>
      </div>
    </div>

    <div class="form-group form-group-custom">
      <%= form.label :remote_picture_url, "URL Imagen", class: "col-lg-4" %>
      <div class="col-lg-12">
        <%= image_tag(history.picture.thumb, style: "margin-bottom: 10px; border-radius: 5px;") if history.picture? %>

        <%= form.text_field :remote_picture_url, id: :history_picture, class: "form-custom" %>
      </div>
      <%= form.hidden_field :picture_cache %>
    </div>

    <div class="form-group form-group-custom">
      <%= form.label :content, "Descripción", class: "col-lg-4" %>
      <div class="col-lg-12">
        <%= form.text_area :content, id: :history_content, class: "form-custom", rows: 5 %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
        <%= form.submit "Enviar", class: "btn btn-enviar" %>
        <%= link_to 'Volver', histories_path, class: "btn btn-volver"  %>
      </div>
    </div>
  </fieldset>
<% end %>
